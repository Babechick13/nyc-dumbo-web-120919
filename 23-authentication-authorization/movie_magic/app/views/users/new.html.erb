<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <p style="color: red;">
      <%= error %>
    </p>
  <% end %>
<% end %>

<h1>Sign Up</h1>

<%= form_for @user do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :img_url %>
  <%= f.text_field :img_url %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.submit %>
<% end %>


